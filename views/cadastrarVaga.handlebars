<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastrar Vaga</title>
  <style>
    body {
      background-color: #0a0a0a;
      color: #f5f5f5;
      font-family: 'Segoe UI', Roboto, Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      width: 100%;
      background-color: #111;
      padding: 30px 0;
      text-align: center;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.6);
    }

    header h1 {
      color: #4fc3f7;
      font-size: 2rem;
      margin: 0;
    }

    h2 {
      margin: 40px 0 20px 0;
      color: #ccc;
    }

    form {
      background: linear-gradient(145deg, #141414, #1c1c1c);
      padding: 30px 40px;
      border-radius: 14px;
      width: 90%;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.05);
    }

    select,
    input[type="number"] {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 8px;
      background-color: #222;
      color: #fff;
    }

    .radio-container {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .radio-btn {
      position: relative;
      padding: 10px 20px;
      background: #1b1b1b;
      border-radius: 30px;
      cursor: pointer;
      color: #bbb;
      font-weight: 500;
      transition: 0.25s ease;
      border: 2px solid #333;
      user-select: none;
    }

    .radio-btn input {
      display: none;
    }

    .radio-btn input:checked+span {
      background: linear-gradient(135deg, #4fc3f7, #0dcaf0);
      color: #000;
      box-shadow: 0 0 12px rgba(79, 195, 247, 0.8);
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #4fc3f7;
      border: none;
      color: #000;
      font-weight: bold;
      border-radius: 8px;
      cursor: pointer;
    }

    .voltar {
      margin: 30px 0;
      color: #4fc3f7;
      text-decoration: none;
      border: 1px solid #4fc3f7;
      padding: 10px 20px;
      border-radius: 8px;
    }

    #campoVeiculo {
      display: none;
      flex-direction: column;
      gap: 10px;
    }
  </style>
</head>

<body>

  <header>
    <h1>Cadastrar Vaga</h1>
  </header>

  <h2>Nova Vaga</h2>

  <form action="/vagas" method="POST">
    <input type="number" name="numero" placeholder="Número da Vaga" required>

    <div class="radio-container">
      <label class="radio-btn">
        <input type="radio" name="ocupada" value="sim" onclick="mostrarVeiculo(true)">
        <span>Ocupada</span>
      </label>
      <label class="radio-btn">
        <input type="radio" name="ocupada" value="nao" onclick="mostrarVeiculo(false)" checked>
        <span>Livre</span>
      </label>
    </div>

    <div id="veiculo-container" style="display:none;">
      <label for="veiculoR">Selecionar Veículo:</label>
      <select name="veiculoR" id="veiculoR">
        <option value="">-- Selecione um veículo --</option>
        {{#each veiculos}}
        <option value="{{this.id}}">{{this.modelo}} - {{this.placa}} ({{this.cor}})</option>
        {{/each}}
      </select>
    </div>

    <button type="submit">Salvar</button>
  </form>

  <script>
    function mostrarVeiculo(mostrar) {
      document.getElementById('veiculo-container').style.display = mostrar ? 'block' : 'none';
    }
  </script>


</body>

</html>